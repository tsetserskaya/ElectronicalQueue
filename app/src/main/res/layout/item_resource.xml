<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="152dp"
    android:background="@drawable/order_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/organisation"
        android:drawableLeft="@drawable/ic_list_organization"
        android:layout_above="@+id/place"
        android:layout_alignLeft="@+id/place"
        android:layout_alignStart="@+id/place" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/place"
        android:drawableLeft="@drawable/ic_action_room"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="20dp"

        android:layout_above="@+id/specialization"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="2dp"
        android:layout_marginTop="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/specialization"
        android:drawableLeft="@drawable/ic_maps_local_hospital"

        android:layout_above="@+id/time"
        android:layout_alignLeft="@+id/time"
        android:layout_alignStart="@+id/time"
        android:layout_marginTop="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/time"
        android:drawableLeft="@drawable/ic_action_schedule"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/organisation"
        android:layout_alignEnd="@+id/organisation"
        android:layout_marginTop="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/name"
        android:textStyle="bold"
        android:textColor="#439ae1"

        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/specialization"
        android:layout_alignStart="@+id/specialization"
        android:layout_marginTop="8dp" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:foreground="#888888"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>